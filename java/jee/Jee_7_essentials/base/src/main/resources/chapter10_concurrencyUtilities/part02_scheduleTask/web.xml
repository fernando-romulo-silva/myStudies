<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
	
	<display-name>embeddedGlassfishTest</display-name>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- <resource-env-ref-name> defines the JNDI name of the resource relative to java:comp/env. --> 
	<!--  It is recommended that you have resource environment references in the java:comp/env/concurrent subcontext. -->
	<resource-env-ref>
		<!-- <resource-env-ref-type> defines the type of resource environment reference. -->
  		<resource-env-ref-name>concurrent/myScheduledExecutor</resource-env-ref-name>
  		<!-- ManagedScheduledExecutor can then be obtained with the usual JNDI reference or @Resource, but with the lookup name of concurrent/myScheduledExecutor. -->
  		<resource-env-ref-type>javax.enterprise.concurrent.ManagedScheduledExecutorService</resource-env-ref-type>
	</resource-env-ref>
	
</web-app>