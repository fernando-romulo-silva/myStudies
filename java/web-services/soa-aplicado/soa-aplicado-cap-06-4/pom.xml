		<artifactId>soa-aplicado</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<properties>
		<cxf.version>3.1.14</cxf.version>
		<spring.version>3.2.8.RELEASE</spring.version>
