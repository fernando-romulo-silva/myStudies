<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- Simply specify the value in the configuration tag, wrapped inside a <value> tag. -->
<!-- By default, not only can the <value> tag read String values, but it can also convert these values to any primitive or primitive wrapper class.  -->

    <bean id="injectSimple" class="com.apress.prospring5.ch3.xml.InjectSimple"
    	p:name="John Mayer"
        p:age="39"
    	p:height="1.92"
        p:programmer="false"
    	p:ageInSeconds="1241401112"/>
</beans>
