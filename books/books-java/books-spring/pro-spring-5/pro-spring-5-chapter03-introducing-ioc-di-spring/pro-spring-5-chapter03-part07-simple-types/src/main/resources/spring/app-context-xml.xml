<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="injectSimpleConfig" class="com.apress.prospring5.ch3.xml.InjectSimpleConfig"/>

	<!-- We can then define the bean in the XML configuration and use SpEL --> 
	<!-- to inject the beanâ€™s properties into the dependent bean -->

    <bean id="injectSimpleSpel" class="com.apress.prospring5.ch3.xml.InjectSimpleSpel"
    	p:name="#{injectSimpleConfig.name}" 
        p:age="#{injectSimpleConfig.age + 1}" 
    	p:height="#{injectSimpleConfig.height}"    
        p:programmer="#{injectSimpleConfig.programmer}" 
    	p:ageInSeconds="#{injectSimpleConfig.ageInSeconds}"/>
    	
    <!-- Notice that we use the SpEL #{injectSimpleConfig.name} in referencing the property of the other bean. --> 	
</beans>
